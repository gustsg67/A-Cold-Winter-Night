currg = "A"
StressLvl = 0

def generalgood() :
    print("Congrats! You've managed to survive this terrifying encounter!")

def jailbad() :
    print("Oh no, you've found yourself in jail.")


def generalbad() :
    print("Oh no that didn't turn out that well..")

    
