        else :
            print("text")
            generalbad()
    elif choice == "B" :
        if StressLvl >= 3 :
            print("Oh no you heart attack")
        else :
            print("text")
            jumpoutwin()
    else :
        print("Oops invaild option.. Try again..")
    
