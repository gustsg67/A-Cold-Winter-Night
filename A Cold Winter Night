while True :
    
    if currg != "A" :
        contin = input("Do you wish to rewrite your destiny and try again from the begining? Y/N?")
        if contin != "Y" or "y" :
            break
        else :
            print("intro")
            StressLvl = 0
            choice = input("choose A[Ignore] B[Investigate] C[Call the police] :")
            if choice == "A" :
                print("text")
                whattobring()
            elif choice == "B" :
                print("text")
                whattobring()
            elif choice == "C" :
                crazyend()
            else :
                print("Oops invalid option.. Try again..")
    else :
        print("intro")
        StressLvl = 0
        currg = "B"
        choice = input("choose A[Ignore] B[Investigate] C[Call the police] :")
        if choice == "A" :
            print("text")
            whattobring()
        elif choice == "B" :
            print("text")
            whattobring()
        elif choice == "C" :
            crazyend()
        else :
            print("Oops invalid option.. Try again..")

